package houseBuilerPackage;
import java.util.ArrayList;
public class House {
	
	private ArrayList<String> bathroom;
	private ArrayList<String> bedroom;
	private String kitchen;
	private String livingRoom;
	private int bathroomCounter;
	private int bedroomCounter;
	
	public House(){
		bedroom = new ArrayList<String>();
		bathroom = new ArrayList<String>();
		bedroomCounter = 0;
		bathroomCounter = 0;
	}
	public String getBathroom(){
		String sentence = " ";
		for(int i = 0; i < bathroom.size(); i ++ ){
			sentence = bathroom.get(i);
		}
		return sentence;	
	}
	
	public void setBathroom(String aBathroom) {
		bathroomCounter ++;
		bathroom.add(aBathroom);
	}
	
	public String getBedroom() {
		String sentence = " ";
		for(int i = 0; i < bedroom.size(); i ++ ){
			sentence = bedroom.get(i);
		}
		return sentence;
	}
	
	public void setBedroom(String aBedroom) {
		bedroomCounter ++;
		bedroom.add(aBedroom);
	}
	public String getKitchen() {
		return kitchen;
	}
	
	public void setKitchen(String kitchen) {
		this.kitchen = kitchen;
	}
	public String getLivingRoom() {
		return livingRoom;
	}
	public void setLivingRoom(String livingRoom) {
		this.livingRoom = livingRoom;
	}
	
	public String toString(){
		
		House h = new House();
		String varBathrooms = h.getBathroom();
		String varBedrooms = h.getBedroom();
		
		return("\nLivingRoom: " +livingRoom
			+"\nKitchen: "+kitchen
			+"\nBathroom: "+bathroom
			+"\nNumber of bathrooms: " + bathroomCounter
			+"\nBedrooms:"+ bedroom 
			+"\nDescrption: " 
			+"\nNumber of Bedrooms: " + varBedrooms 
			+ bedroomCounter
			+"\nBathrooms description: " + varBathrooms);			
	}
	
}
